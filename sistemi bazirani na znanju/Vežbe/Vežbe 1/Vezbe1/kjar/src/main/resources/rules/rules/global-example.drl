package rules.rules

import com.ftn.model.Order;
import com.ftn.model.Discount;

global Integer comboCount;

rule "Combo discount"

    when
        $o: Order( orderLines.size >= comboCount, discount == null )
    then
        $o.setDiscount(new Discount(10.0));
        update($o);
end
